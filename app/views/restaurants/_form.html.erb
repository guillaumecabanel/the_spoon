<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <% if @restaurant.new_record? %>
  	<%= f.submit 'Create!' %>
  <% else %>
  	<%= f.submit 'Update!' %>
  <% end %>
<% end %>